<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

    <description>
      My first web application.
    </description>
    <display-name>First java application</display-name>

    <request-character-encoding>UTF-8</request-character-encoding>


<servlet>
<servlet-name>AddDesignation</servlet-name>
<servlet-class>com.thinking.machines.hr.servlets.AddDesignation</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>AddDesignation</servlet-name>
<url-pattern>/addDesignation</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>NotifyFormResubmission</servlet-name>
<servlet-class>com.thinking.machines.hr.servlets.NotifyFormResubmission</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>NotifyFormResubmission</servlet-name>
<url-pattern>/notifyFormResubmission</url-pattern>
</servlet-mapping>


<servlet>
<servlet-name>Login</servlet-name>
<servlet-class>com.thinking.machines.hr.servlets.Login</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>Login</servlet-name>
<url-pattern>/login</url-pattern>
</servlet-mapping>


<servlet>
<servlet-name>Logout</servlet-name>
<servlet-class>com.thinking.machines.hr.servlets.Logout</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>Logout</servlet-name>
<url-pattern>/logout</url-pattern>
</servlet-mapping>


<servlet>
<servlet-name>DeleteDesignation</servlet-name>
<servlet-class>com.thinking.machines.hr.servlets.DeleteDesignation</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>DeleteDesignation</servlet-name>
<url-pattern>/deleteDesignation</url-pattern>
</servlet-mapping>


<servlet>
<servlet-name>DesignationDeleteConfirmation</servlet-name>
<servlet-class>com.thinking.machines.hr.servlets.DesignationDeleteConfirmation</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>DesignationDeleteConfirmation</servlet-name>
<url-pattern>/designationDeleteConfirmation</url-pattern>
</servlet-mapping>


<servlet>
<servlet-name>EmployeesJS</servlet-name>
<servlet-class>com.thinking.machines.hr.servlets.EmployeesJS</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>EmployeesJS</servlet-name>
<url-pattern>/js/Employees.js</url-pattern>
</servlet-mapping>


<welcome-file-list>
<welcome-file>LoginForm.jsp</welcome-file>
</welcome-file-list>

</web-app>
